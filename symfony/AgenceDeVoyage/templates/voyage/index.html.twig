{% extends 'base.html.twig' %}

{% block title %}Voyage index{% endblock %}

{% block body %}
    <h1>Voyage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomVoyage</th>
                <th>Description</th>
                <th>Photo</th>
                <th>Prix</th>
                <th>Depart</th>
                <th>Retour</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voyage in voyages %}
            <tr>
                <td>{{ voyage.id }}</td>
                <td>{{ voyage.NomVoyage }}</td>
                <td>{{ voyage.Description }}</td>
                <td>{{ voyage.Photo }}</td>
                <td>{{ voyage.Prix }}</td>
                <td>{{ voyage.Depart ? voyage.Depart|date('Y-m-d') : '' }}</td>
                <td>{{ voyage.Retour ? voyage.Retour|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_voyage_show', {'id': voyage.id}) }}">show</a>
                    <a href="{{ path('app_voyage_edit', {'id': voyage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_voyage_new') }}">Create new</a>
{% endblock %}
