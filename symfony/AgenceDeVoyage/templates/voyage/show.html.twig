    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ voyage.id }}</td>
            </tr>
            <tr>
                <th>NomVoyage</th>
                <td>{{ voyage.NomVoyage }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ voyage.Description }}</td>
            </tr>
            <tr>
